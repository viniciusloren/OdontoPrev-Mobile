<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <Button
        android:id="@+id/button_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text_prontuario_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prontuário Paciente"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/button_menu"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_tipo_plano_prontuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Plano"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/text_prontuario_title"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/holo_blue_dark" />

    <Spinner
        android:id="@+id/spinner_tipo_plano_prontuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tipo_plano_prontuario"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_background" />

    <EditText
        android:id="@+id/edit_descricao_sintomas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição dos Sintomas"
        android:layout_below="@id/spinner_tipo_plano_prontuario"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp" />

    <Button
        android:id="@+id/button_enviar_prontuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Prontuário"
        android:layout_below="@id/edit_descricao_sintomas"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />

</RelativeLayout>
