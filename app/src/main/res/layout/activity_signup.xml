<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/title_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/blue_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:background="@drawable/edit_text_background"
        android:layout_below="@id/title_signup"
        android:padding="12dp"
        android:textColor="@color/blue_dark"
        android:layout_marginBottom="16dp"
        android:drawablePadding="8dp" />

    <EditText
        android:id="@+id/edit_sobrenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sobrenome"
        android:background="@drawable/edit_text_background"
        android:layout_below="@id/edit_nome"
        android:padding="12dp"
        android:textColor="@color/blue_dark"
        android:layout_marginBottom="16dp"
        android:drawablePadding="8dp" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:background="@drawable/edit_text_background"
        android:inputType="textEmailAddress"
        android:layout_below="@id/edit_sobrenome"
        android:padding="12dp"
        android:textColor="@color/blue_dark"
        android:layout_marginBottom="16dp"
        android:drawablePadding="8dp" />

    <EditText
        android:id="@+id/edit_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:background="@drawable/edit_text_background"
        android:inputType="textPassword"
        android:layout_below="@id/edit_email"
        android:padding="12dp"
        android:textColor="@color/blue_dark"
        android:layout_marginBottom="16dp"
        android:drawablePadding="8dp" />

    <EditText
        android:id="@+id/edit_data_nascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento"
        android:background="@drawable/edit_text_background"
        android:layout_below="@id/edit_senha"
        android:padding="12dp"
        android:textColor="@color/blue_dark"
        android:layout_marginBottom="16dp"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/text_tipo_plano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Plano"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blue_dark"
        android:layout_below="@id/edit_data_nascimento"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner_plano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:layout_below="@id/text_tipo_plano"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blue_dark"
        android:layout_below="@id/spinner_plano"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner_sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:layout_below="@id/text_sexo"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edit_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CEP"
        android:background="@drawable/edit_text_background"
        android:layout_below="@id/spinner_sexo"
        android:padding="12dp"
        android:textColor="@color/blue_dark"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp" />

    <Button
        android:id="@+id/button_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textColor="@android:color/white"
        android:layout_below="@id/edit_cep"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue_light" />

</RelativeLayout>
